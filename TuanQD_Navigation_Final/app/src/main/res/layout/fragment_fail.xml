<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fail">

    <Button
        android:id="@+id/btnFailRetest"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="@string/retest"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtFail"
        app:layout_constraintStart_toStartOf="@+id/txtFail"
        app:layout_constraintTop_toBottomOf="@+id/txtFail"
        app:layout_constraintVertical_bias="0.098" />

    <TextView
        android:id="@+id/txtFail"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@color/purple_500"
        android:gravity="center"
        android:text="@string/failed"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.321" />
</androidx.constraintlayout.widget.ConstraintLayout>