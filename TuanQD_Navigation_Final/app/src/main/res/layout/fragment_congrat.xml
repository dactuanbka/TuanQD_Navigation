<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Congrat">

    <TextView
        android:id="@+id/txtScore"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="64dp"
        android:background="@color/purple_500"
        android:text="@string/score"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtCongrat"
        app:layout_constraintStart_toStartOf="@+id/txtCongrat"
        app:layout_constraintTop_toBottomOf="@+id/txtCongrat"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnCongratRetest"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="@string/retest"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.279" />

    <TextView
        android:id="@+id/txtCongrat"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/purple_500"
        android:gravity="center"
        android:text="@string/conngrat"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnCongratRetest"
        app:layout_constraintStart_toStartOf="@+id/btnCongratRetest"
        app:layout_constraintTop_toBottomOf="@+id/btnCongratRetest"
        app:layout_constraintVertical_bias="0.101" />
</androidx.constraintlayout.widget.ConstraintLayout>